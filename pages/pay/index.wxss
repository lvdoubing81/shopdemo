page {
  padding-bottom: 90rpx;
}
page .address-info {
  display: flex;
  align-items: center;
  padding: 24rpx;
}
page .address-info .user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
page .cart-content .cart-title {
  color: var(--themeColor);
  font-size: 32rpx;
  padding: 24rpx;
  border: 4rpx solid #eeeeee;
}
page .cart-content .cart-main .cart-item {
  display: flex;
  padding-bottom: 12rpx;
  border-bottom: 1px solid #eeeeee;
}
page .cart-content .cart-main .cart-item .item-img {
  flex: 2;
}
page .cart-content .cart-main .cart-item .item-img image {
  width: 100%;
}
page .cart-content .cart-main .cart-item .item-info {
  padding: 0 12rpx;
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
page .cart-content .cart-main .cart-item .item-info .goods-name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
page .cart-content .cart-main .cart-item .item-info .goods-detail {
  display: flex;
  line-height: 50rpx;
  justify-content: space-between;
}
page .cart-content .cart-main .cart-item .item-info .goods-detail .goods-price {
  color: var(--themeColor);
  font-size: 34rpx;
}
page .cart-content .cart-main .cart-item .item-info .goods-detail .goods-tool {
  display: flex;
}
page .cart-content .cart-main .cart-item .item-info .goods-detail .goods-tool .goods-count {
  text-align: center;
  width: 50rpx;
}
page .footer-tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
page .footer-tool .total-price {
  flex: 5;
  text-align: right;
  padding-right: 12rpx;
}
page .footer-tool .total-price .price-txt {
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;
}
page .footer-tool .pay {
  flex: 3;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-weight: 600;
  background-color: var(--themeColor);
}
